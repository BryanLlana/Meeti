<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    
    <form method="post" class="default-form" enctype="multipart/form-data">
      <legend>Sube tu imagen que se mostrará junto a tu nombre y biografía</legend>
      <div class="campo">
        <label for="imagen">Imagen</label>
        <input type="file" name="imagen" id="imagen">
      </div>

      <% if(usuario.img) { %>
        <div class="campo">
          <label>Imagen Actual</label>
          <img src="/uploads/perfiles/<%- usuario.img %>" width="400">
        </div>
      <% } else { %>
        <p>No hay imagen actual</p>
      <% } %>
  
      <div class="campo enviar">
        <input type="submit" class="btn btn-rosa" value="Subir Imagen">
      </div>
    </form>
  </main>