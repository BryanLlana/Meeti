<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %></h1>
    
    <form method="post" class="default-form">
      <div class="campo">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" placeholder="Ej: Grupo Maravilla" value="<%- grupo.nombre %>">
      </div>
  
      <div class="campo descripcion">
        <label for="descripcion">Descripción</label>
        <div class="contenedor-editor">
          <input type="hidden" id="x" name="descripcion" value="<%- grupo.descripcion %>">
          <trix-editor input="x"></trix-editor>
        </div>
      </div>
  
      <div class="campo">
        <label for="categoria">Categoría</label>
        <select name="categoria" id="categoria">
          <option value="" selected disabled>-- Elige una categoría --</option>
          <% categorias.forEach(categoria => { %>
            <option
              value=<%- categoria.id  %> 
              <%- (grupo.categoriaId === categoria.id) ? 'selected' : '' %>
            ><%- categoria.nombre %>
            </option>
          <% }) %>
        </select>
      </div>
  
      <div class="campo">
        <label for="sitioWeb">Sitio Web</label>
        <input type="url" name="sitioWeb" id="sitioWeb" placeholder="Ej: www.miweb.com" value="<%- grupo.sitioWeb %>">
      </div>
  
      <div class="campo enviar">
        <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
      </div>
    </form>
  </main>