<main class="contenedor contenedor-formularios">
  <h1><%- nombrePagina %></h1>

  <form 
    action="/crear-cuenta" 
    method="post" 
    class="default-form"
  >
    <div class="campo">
      <label for="email">E-mail</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        placeholder="Ejm: usuario@gmail.com"
      >
    </div>
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input 
        type="text" 
        id="nombre" 
        name="nombre" 
        placeholder="Ejm: Juan"
      >
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        placeholder="Ejm: ***********"
      >
    </div>
    <div class="campo">
      <label for="password2">Repetir Password</label>
      <input 
        type="password" 
        id="password2" 
        name="password2" 
        placeholder="Ejm: ***********"
      >
    </div>
    <div class="campo enviar">
      <input 
        type="submit"
        class="btn btn-rosa"
        value="Crear Cuenta"
      >
    </div>
  </form>
</main>